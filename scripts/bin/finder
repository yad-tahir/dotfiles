# Firefox calls this script to open a local directory

path=$1

prefix="${path:0:7}"

#Remove the 'file://' prefix if exists
if [ $prefix == "file://" ]; then
	path="${path#?????}"
fi

# Open Dired mode
emacsclient -n "$path"
