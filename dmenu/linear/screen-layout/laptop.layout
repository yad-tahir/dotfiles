# Import utility functions
cd `dirname $0`
. $PWD/util.sh


xrandr --output eDP-1 --primary --mode 2880x1800 --pos 0x0 --rotate normal --rate 60\
	   --output eDP-2 --off\
	   --output DP-1 --off --output DP-2 --off\
	   --output HDMI-1 --off

util-set-dpi 150

# Power saving
xset +dpms
xset s on

util-launch &

sleep 1

#Fix touchscreens
arr=(
	"ELAN9008:00 04F3:425B"
	"ELAN9008:00 04F3:425B Touchpad"
	"ELAN9008:00 04F3:425B Stylus Pen (0)"
	"ELAN9008:00 04F3:425B Stylus Eraser (0)"
)
for i in "${arr[@]}";do
	touchdev=$(xinput list --id-only "$i")
	xinput --enable "$touchdev"
	xinput --map-to-output "$touchdev" eDP-1
done

arr=(
	"ELAN9009:00 04F3:425A"
	"ELAN9009:00 04F3:425A Touchpad"
	"ELAN9009:00 04F3:425A Stylus Pen (0)"
	"ELAN9009:00 04F3:425A Stylus Eraser (0)"
)
for i in "${arr[@]}";do
	touchdev=$(xinput list --id-only "$i")
	xinput --disable "$touchdev"
done
