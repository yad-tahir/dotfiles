!! General settings
Xcursor.size: 20

!! Emacs settings
Emacs.cursorBlink: 0
Emacs.menuBar: 0
Emacs.toolBar: 0
Emacs.verticalScrollBars: off
! avoid X core font engine and use the newer enginer xft.
! Emacs.FontBackend: cairo,xft,x
Emacs.font: DejaVu Sans Mono:size=28

*background: #000000
*foreground: #e6beae
*pointerColorBackground: #000000
*pointerColorForeground: #e6beae
*color0: #392626
*color8: #654d4d
*color1: #ffc05c
*color9: #ffa500
*color2: #a7e23e
*color10: #00ff7f
*color3: #ff6347
*color11: #ff4422
*color4: #da70d6
*color12: #9932cc
*color5: #efd5cb
*color13: #f0f0a0
*color6: #6fd8ff
*color14: #00f5ff
*color7: #bd9c8f
*color15: #392626
*highlightColor: #392626
*highlightTextColor: #ffa500
*colorBD: #ffa500
*colorIT: #00ff7f
*colorUL: #a7e23e
*coloRV: #00f5ff

Panel.font1: DejaVu Sans Mono:size=7
Panel.height: 35

!! URxvt settings
URxvt.font: xft:DejaVu Sans Mono:size=8:antialias=true
URxvt.depth: 32
URxvt.scrollBar: false
URxvt.letterSpace: -1
! Pointer
URxvt.pointerBlank: true
!! Extensions
URxvt.perl-lib: /usr/lib64/urxvt/perl
URxvt.perl-ext-common:	default,matcher,font-size,selection-to-clipboard
URxvt.colorUL: #ff4422
!! url-select
URxvt.url-select.launcher: linkhandler
URxvt.url-select.underline: true
URxvt.url-launcher:	/usr/bin/xdg-open
URxvt.urlButton: 1
URxvt.matcher.button: 1
!! copy pasting
URxvt.keysym.Control-p: eval:paste_clipboard
URxvt.keysym.Control-y: eval:selection_to_clipboard
!! Otherbinding
URxvt.keysym.Control-h:      \033[1;5D
URxvt.keysym.Control-n:      \033[1;5C
URxvt.keysym.Control-c:      \033[A
URxvt.keysym.Control-t:      \033[B
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C
!! Highlighting mode
URxvt.keysym.Control-v:      command:\033[33;1m
URxvt.keysym.Control-V:      command:\033[0m