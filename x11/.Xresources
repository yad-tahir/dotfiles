!! General settings
Xcursor.size: 16

!! Emacs settings
Emacs.cursorBlink: 0
Emacs.menuBar: 0
Emacs.toolBar: 0
Emacs.verticalScrollBars: off
! avoid X core font engine and use the newer enginer xft.
Emacs.FontBackend: xft,x
Emacs.font: DejaVu Sans Mono:size=24

!! URxvt settings
URxvt.font: xft:DejaVu Sans Mono:size=8:antialias=true
! URxvt.font: xft:monospace:size=10:Bold
URxvt.scrollBar: false
URxvt.letterSpace: -1

! Pointer
URxvt.pointerBlank:         true

*background: #000000
*foreground: #e6beae
*pointerColorBackground: #000000
*pointerColorForeground: #e6beae

!! black dark/light
*color0: #000000
*color8: #654d4d

!! red dark/light
*color1: #ff4422
*color9: #ff4422

!! green dark/light
*color2: #a7e23e
*color10: #a7e23e

!! yellow dark/light
*color3: #ffa500
*color11: #ffa500

!! magenta dark/light
*color4: #da70d6
*color12: #db70d6

!! blue dark/light
*color5: #db7093
*color13: #db7093

!! cyan dark/light
*color6: #ff8c69
*color14: #ff8c69

!! white dark/light
*color7: #654d4d
*color15: #654d4d

!! Extensions
URxvt.perl-ext-common:	default,matcher,resize-font,url-select,keyboard-select,clipboard
URxvt.colorUL:		#ff4422
!! url-select
URxvt.keysym.M-l:	perl:url-select:select_next
URxvt.url-select.launcher: linkhandler
URxvt.url-select.underline: true
!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate
!! Matcher
URxvt.url-launcher:	/usr/bin/xdg-open
URxvt.urlButton:	1
URxvt.matcher.button:	1

!! copy pasting
URxvt.iso14755: False
URxvt.keysym.Control-p: perl:clipboard:paste
URxvt.keysym.Control-y: perl:clipboard:copy
! URxvt.keysym.Shift-Control-V: perl:clipboard:paste
! URxvt.keysym.Shift-Control-C: perl:clipboard:copy

URxvt.keysym.Control-h:      \033[1;5D
URxvt.keysym.Control-n:      \033[1;5C
URxvt.keysym.Control-c:      \033[A
URxvt.keysym.Control-t:      \033[B
! Highlight mode
URxvt.keysym.Control-v:      command:\033[33;1m
URxvt.keysym.Control-V:      command:\033[0m

URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

URxvt*iso14755: False
URxvt*iso14755_52: False

!! xrdb ~/.Xresources && urxvt&