#!/bin/sh

SUDO='sudo -g audio -E'
$SUDO jackd -dalsa -dhw:S1810c,0 -r192000 -p1024 -n2 -m -M -i8 -o6 &
sleep 2
pactl load-module module-jack-sink channels=2 client_name=presonus-pulse-sink > /dev/null &
pactl load-module module-jack-source channels=2 client_name=presonus-pulse-source > /dev/null &
exec $SUDO qjackctl
